<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="beanOne" class="com.company.springproject.service.TestBeanSpecial" scope="prototype">
        <property name="type" value="xml_special"/>
    </bean>

    <bean id="beanTwo" class="com.company.springproject.service.TestBeanNonSpecial" scope="singleton">
        <property name="beanOne" ref="beanOne"/>
        <property name="type" value="xml_non_special"/>
    </bean>

</beans>